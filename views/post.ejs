<!doctype html>
<html lang="ja">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

    <title>投稿一覧</title>
  </head>
  <body>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    
    <div class="container">
      <div class="row">
        <br>
        <br>
        <div class="col-md-12 px-100px">
          <form action="/post" method="POST">
            <div class="mb-3">
              <label for="titleInput" class="form-label">タイトル</label>
              <input type="text" class="form-control" id="titleInput" name="title" required>
            </div>
            <div class="mb-3">
              <label for="messageInput" class="form-label">本文</label>
              <textarea class="form-control" id="titleInput" rows="3" name="message" required></textarea>
            </div>
            <button type="submit" class="btn btn-outline-primary">投稿</button>
          </form>
        </div>
      </div>

      <br>
      <br>
      <br>
      <table border="1" class="table table-striped" width="100%">
        <thead>
          <tr>
            <th width="5%">＊</th>
            <th width="20%">ユーザー名</th>
            <th width="20%">タイトル</th>
            <th width="40%">本文</th>
            <th width="15%">投稿日</th>
          </tr>
        </thead>
        <tbody>
            <% for(let i = 0; i < posts.length; i++){ %>
            <tr>
                <td><%= i + 1 %></th>
                <td><%= posts[i].user_name %></td>
                <td><%= posts[i].title %></td>
                <td><%= posts[i].message %></td>
                <td><%= posts[i].post_date %></td>
            </tr>
            <% } %>
        </tbody>
      </table>
    </div>
  </body>
</html>